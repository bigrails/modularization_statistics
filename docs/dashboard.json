            "id": 3643760892520117,
            "definition": {
              "title": "Current count (left) and monthly change (right) of violations",
              "title_size": "16",
              "title_align": "left",
              "type": "change",
              "requests": [
                {
                  "change_type": "absolute",
                  "compare_to": "hour_before",
                  "formulas": [
                    {
                      "formula": "month_before(query1)"
                    },
                    {
                      "formula": "query1",
                      "alias": "current violation count"
